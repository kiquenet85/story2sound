# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST    /login/submit               controllers.Application.loginSubmit()

#User
GET     /users/data/params           controllers.UserController.getUser(id:String ?=null,name:String ?=null,date:String ?=null)
GET     /users                       controllers.UserController.getUsers
POST    /users                       controllers.UserController.createUser
PUT     /users/:id                   controllers.UserController.updateUser(id: String)
DELETE  /users/:id                   controllers.UserController.deleteUser(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
